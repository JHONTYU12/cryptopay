<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_900"
    tools:context=".OnboardingReconocimientoFacialActivity">

    <!-- Logo superior derecho -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/logosuperiorderecha"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de atrás -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Volver"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título principal -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:text="Mantén tu rostro"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Dentro del círculo"
        android:textColor="@color/neutral_300"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Área de reconocimiento facial -->
    <androidx.cardview.widget.CardView
        android:id="@+id/scanAreaCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/primary_800"
        app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scanButton"
        app:layout_constraintDimensionRatio="3:4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Marco circular para el rostro -->
            <View
                android:id="@+id/faceFrame"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/bg_face_frame"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <!-- Esquinas del marco -->
            <!-- Esquina superior izquierda -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_corner_top_left"
                app:layout_constraintTop_toTopOf="@id/faceFrame"
                app:layout_constraintStart_toStartOf="@id/faceFrame"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="-15dp" />

            <!-- Esquina superior derecha -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_corner_top_right"
                app:layout_constraintTop_toTopOf="@id/faceFrame"
                app:layout_constraintEnd_toEndOf="@id/faceFrame"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="-15dp" />

            <!-- Esquina inferior izquierda -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_corner_bottom_left"
                app:layout_constraintBottom_toBottomOf="@id/faceFrame"
                app:layout_constraintStart_toStartOf="@id/faceFrame"
                android:layout_marginBottom="-15dp"
                android:layout_marginStart="-15dp" />

            <!-- Esquina inferior derecha -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_corner_bottom_right"
                app:layout_constraintBottom_toBottomOf="@id/faceFrame"
                app:layout_constraintEnd_toEndOf="@id/faceFrame"
                android:layout_marginBottom="-15dp"
                android:layout_marginEnd="-15dp" />

            <!-- Texto de instrucción -->
            <TextView
                android:id="@+id/instructionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Posiciona tu rostro dentro del círculo\ny mantén la posición"
                android:textColor="@color/neutral_300"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/faceFrame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Botón de iniciar reconocimiento -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Iniciar Reconocimiento"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/cta"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de continuar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Continuar"
        android:textColor="@color/neutral_600"
        android:textSize="16sp"
        android:enabled="false"
        app:backgroundTint="@color/neutral_700"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
