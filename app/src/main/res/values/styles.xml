<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Botón píldora -->
    <style name="Widget.CryptoPay.Button.Pill" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <!-- Puedes delegar colores al tema si prefieres -->
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_900</item>
    </style>

    <!-- TextInputLayout outlined -->
    <style name="Widget.CryptoPay.TextInputLayout.Outlined"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/primary_300</item>
        <item name="android:textColorHint">@color/neutral_400</item>
    </style>

    <style name="Widget.CryptoPay.OtpBox.New" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_otp_box</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:imeOptions">actionNext</item>
    </style>


    <!-- ShapeAppearance para redondear solo la parte superior -->
    <style name="ShapeAppearance.CryptoPay.TopRounded28"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Alias de compatibilidad -->
    <style name="Shape.TopRounded28" parent="ShapeAppearance.CryptoPay.TopRounded28" />

</resources>
